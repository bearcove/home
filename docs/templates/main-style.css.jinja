:root {
    color-scheme: light dark;

    --main-font: "PublicSans", sans-serif;
    --bg-color: light-dark(oklch(1 0 0), oklch(0.15 0 0));
    --heading-color: light-dark(oklch(0 0 0), oklch(1 0 0));
    --text-color: light-dark(oklch(0.2 0 0), oklch(0.88 0 0));

    --accent-light: oklch(0.63 0.38 98.63);
    --accent-dark: oklch(0.66 0.27 10.44);
    --link-color: light-dark(var(--accent-light), var(--accent-dark));
    --code-bg-color: light-dark(oklch(0.97 0 0), oklch(0.18 0 0));

    --nav-base-light: var(--accent-light);
    --nav-base-dark: var(--accent-dark);

    --nav-base: light-dark(var(--nav-base-light), var(--nav-base-dark));
    --nav-bg: light-dark(
        color-mix(in oklch, var(--nav-base-light), white 92%),
        color-mix(in oklch, var(--nav-base-dark), black 10%)
    );
    --nav-inactive: var(--nav-base);
    --nav-active: light-dark(
        color-mix(in oklch, var(--nav-base-light), black 50%),
        color-mix(in oklch, var(--nav-base-dark), white 50%)
    );
    --nav-active-bg: light-dark(
        color-mix(in oklch, var(--nav-base-light), white 80%),
        color-mix(in oklch, var(--nav-base-dark), black 33%)
    );
    --nav-hover: light-dark(
        color-mix(in oklch, var(--nav-base-light), black 73%),
        color-mix(in oklch, var(--nav-base-dark), white 33%)
    );
    --nav-hover-bg: light-dark(
        color-mix(in oklch, var(--nav-base-light), white 65%),
        color-mix(in oklch, var(--nav-base-dark), black 25%)
    );
}

html {
    font-family: var(--main-font);
    background-color: var(--bg-color);
    color: var(--text-color);
    color-scheme: light dark;
    font-size: 16px;
}

@media (max-width: 1200px) {
    html {
        font-size: 16px;
    }
}

@media (max-width: 768px) {
    html {
        font-size: 15.2px; /* 16px * 0.95 */
    }
}

@media (max-width: 480px) {
    html {
        font-size: 14.88px; /* 16px * 0.93 */
    }
}

@media (prefers-color-scheme: dark) {
    html {
        color-scheme: dark;
    }
}

body {
    margin: 0;
    padding: 0;
    line-height: 1.5;
}

main {
    a {
        color: var(--link-color);

        &.anchor {
            text-decoration: none;
            color: var(--text-color);
        }
    }

    p {
        img,
        video {
            max-width: 100%;
            height: auto;
        }
    }

    h1 {
        margin-block-end: 1.2rem;
    }

    h2,
    h3,
    h4,
    h5,
    h6 {
        color: var(--heading-color);
        font-weight: 900;
        margin-block-end: 0.6rem;
    }

    h1 {
        font-size: 1.5em;
        font-weight: 900;
        margin-block-end: 0.4em;

        @media (max-width: 768px) {
            font-size: 1.8rem;
        }
    }

    h2 {
        font-size: 1.3rem;
    }

    h3 {
        font-size: 1.2rem;
    }

    h4 {
        font-size: 1.1rem;
    }

    h5 {
        font-size: 1rem;
    }

    h6 {
        font-size: 0.9rem;
    }

    p,
    ol,
    ul {
        margin-block-end: 0.8em;
    }

    ol,
    ul {
        padding-inline-start: 1.5em;
        margin-block-start: 0.5em;
        margin-block-end: 0.5em;

        li {
            margin-block-end: 0.3em;

            &:last-child {
                margin-block-end: 0;
            }
        }
    }

    figure {
        margin-block-start: 1.5em;
        margin-block-end: 1.5em;

        figcaption {
            font-size: 0.9em;

            :last-child {
                margin-block-end: 0;
            }
        }
    }

    blockquote {
        border-left: 4px solid var(--link-color);
        margin: 1em 0;
        padding-inline-start: 1em;
        color: var(--text-color);
        font-size: 0.9em;
    }

    code {
        font-size: 80%;
        border-radius: 4px;
        padding: 0.15em 0.3em;
        background: var(--code-bg-color);
    }

    figure.code-block {
        display: block;
        font-size: 73%;
        border-radius: 4px;
        max-width: 100%;
        width: auto;
    }
}

tt,
code,
kbd,
samp,
pre {
    font-family: "JetBrains Mono NL Nerd Font Mono", monospace;
}

cite {
    font-style: normal;
}

.side-nav {
    width: 220px;
    padding: 0;
    background-color: var(--nav-bg);
    position: relative;
    transition: transform 0.3s ease;

    @media screen and (max-width: 600px) {
        position: fixed;
        top: 0;
        bottom: 0;
        transform: translateX(-100%);
        z-index: 1000;
    }

    &.left-nav {
        left: 0;
    }

    &.right-nav {
        right: 0;
        transform: translateX(100%);
    }

    &.active {
        transform: translateX(0);
    }
}

@media screen and (min-width: 601px) and (max-width: 1199px) {
    .side-nav {
        &.left-nav {
            position: relative;
            transform: none;
        }
        &.right-nav {
            position: fixed;
            top: 0;
            bottom: 0;
            right: 0;
            transform: translateX(100%);
            &.active {
                transform: translateX(0);
            }
        }
    }
}

@media screen and (min-width: 1200px) {
    .side-nav {
        width: 250px;
        &.left-nav,
        &.right-nav {
            position: relative;
            transform: none;
        }
    }
}

.side-nav-inner {
    position: sticky;
    top: 0;
    height: 100vh;
    overflow-y: auto;
    padding: 1em 0;
}

.side-nav {
    ul {
        list-style-type: none;
        padding: 0;
        margin: 0;

        li {
            font-size: 0.95rem;
            margin: 0;
        }
    }

    a {
        display: block;
        padding: 0.35em 0.8em;
        color: var(--nav-inactive);
        text-decoration: none;

        &:hover,
        &:focus {
            color: var(--nav-hover);
            background-color: var(--nav-hover-bg);
        }

        &.active {
            color: var(--nav-active);
            background-color: var(--nav-active-bg);
        }
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
        padding: 0;
        margin: 0;
        font-size: inherit;
        font-weight: inherit;
    }

    h2 {
        padding-inline-start: 0.5em;
    }

    h3 {
        padding-inline-start: 1em;
    }

    h4 {
        padding-inline-start: 1.5em;
    }

    h5 {
        padding-inline-start: 2em;
    }

    h6 {
        padding-inline-start: 2.5em;
    }
}

.docs-container {
    display: flex;
    background-color: var(--nav-bg);
    max-width: 1200px;
    margin: 0 auto;
    min-height: 100vh;
    position: relative;

    .nav-toggle {
        display: none;
        position: fixed;
        z-index: 1001;
        background-color: var(--nav-bg);
        border: 1px solid var(--nav-inactive);
        padding: 6px;
        cursor: pointer;
        border-radius: 4px;

        svg {
            width: 18px;
            height: 18px;
        }

        @media screen and (max-width: 600px) {
            display: block;
        }

        &.left-toggle {
            left: 10px;
            top: 10px;
        }

        &.right-toggle {
            right: 10px;
            top: 10px;
        }

        @media screen and (min-width: 600px) and (max-width: 1199px) {
            &.right-toggle {
                display: block;
            }
        }

        &:hover {
            background-color: var(--nav-hover-bg);
        }
    }

    .main-content {
        flex: 1;
        padding: 1em 1.8em;
        background-color: var(--bg-color);
        overflow-x: hidden;
        scroll-padding-top: 1em;

        @media screen and (max-width: 600px) {
            padding-block-start: 3em; // Additional padding for small screens
        }
    }

    .left-nav,
    .right-nav {
        .toc-header {
            font-size: 1.1em;
            font-weight: bold;
            margin: 0;
        }

        h1 {
            font-size: 0.95em;
            font-weight: bold;
            > a {
                padding-inline-start: 0.4em;
            }
        }
        h2 {
            font-size: 0.9em;
            > a {
                padding-inline-start: 0.4em;
            }
        }
        h3 {
            font-size: 0.85em;
            > a {
                padding-inline-start: 0.8em;
            }
        }
        h4 {
            font-size: 0.8em;
            > a {
                padding-inline-start: 1.2em;
            }
        }
        h5 {
            font-size: 0.75em;
            > a {
                padding-inline-start: 1.6em;
            }
        }
        h6 {
            font-size: 0.7em;
            > a {
                padding-inline-start: 2em;
            }
        }
    }

    figure:not(.code-block) {
        background-color: var(--bg-color);
        border: 1px solid var(--nav-inactive);
        padding: 0.4em 0.4em;
        border-radius: 4px;

        img,
        video {
            max-width: 100%;
            height: auto;
        }

        figcaption {
            margin-block-start: 0.8em;

            &:last-child {
                margin-block-end: 0;
            }
        }
    }
}
