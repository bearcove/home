{
  &quot;headers&quot;: {
    &quot;Host&quot;: &quot;ducks.example.org&quot;,
    &quot;User-Agent&quot;: &quot;curl&#x2F;7.73.0&quot;,
    &quot;Accept&quot;: &quot;*&#x2F;*&quot;
  },
